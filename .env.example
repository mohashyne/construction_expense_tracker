# Django Settings
SECRET_KEY=your-super-secret-key-here-generate-new-one-for-production
DEBUG=False

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/construction_tracker

# Allowed Hosts (comma separated)
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Admin Configuration
ADMIN_EMAILS=admin@your-domain.com,support@your-domain.com

# Site Configuration
SITE_URL=https://your-domain.com

# Static and Media Files
STATIC_ROOT=staticfiles
MEDIA_ROOT=media

# Security Settings (Production Only)
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# Optional: Sentry for Error Tracking
SENTRY_DSN=your-sentry-dsn-here

# Optional: Redis for Caching
REDIS_URL=redis://localhost:6379/1

# Optional: S3 Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1
